/* pages/register/register.wxss */

page{
  background: rgb(243, 243, 243);
}
.register-form{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 100rpx auto;
}
.register-logo image{
  width: 120rpx;
  height: 120rpx;
}
.inputform{
  margin: 40rpx;
  width: 480rpx;
}
.account,.password{
  margin: 20rpx 0;
  width: 100%;
  
}
.verificationCode{
  display:inline-block;
}
.nav_left{
  margin: 20rpx 0;
  width: 60%;
  float:left;
 
}
.nav_btn{
  margin: 20rpx 0;
  width: 40%;
  height: 32px;
  background: white;
  box-sizing: border-box;
  padding: 0 15rpx;
  border-radius: 8rpx;
  font-size: 25rpx; 
  background: rgb(46, 219, 112);
  color: #fff;
}
#number,#secret,#vc{
  background: white;
  padding: 10rpx 15rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 32rpx; 
  height:75rpx;
  width: 100%
}

.submitRegisterform{
  width: 480rpx;
}
#button2{
  background: white;
  box-sizing: border-box;
  padding: 0 15rpx;
  border-radius: 8rpx;
  font-size: 32rpx; 
  width: 100%;
  background: rgb(46, 219, 112);
  color: #fff;
}

